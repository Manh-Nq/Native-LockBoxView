<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LockBoxVIew" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BatteryDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">#2F80ED</item>
        <item name="colorControlNormal">#333333</item>
        <item name="android:windowBackground">@drawable/auto_scan_dialog_bg</item>
    </style>

    <style name="topAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/top_enter</item>
        <item name="android:windowExitAnimation">@anim/top_exit</item>
    </style>
    <style name="bottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_exit</item>
    </style>

    <style name="NotificationAnimationTop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/top_enter</item>
        <item name="android:windowExitAnimation">@anim/top_exit</item>
    </style>

    <style name="NotificationAnimationBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_exit</item>
    </style>


</resources>